<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.effect.DropShadow?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.yunhang.forum.controller.post.PostEditorController"
      style="-fx-background-color: white; -fx-background-radius: 20;">
    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="10">
        <VBox prefWidth="4" prefHeight="20" style="-fx-background-color: #6366f1; -fx-background-radius: 2;" />
        <Label text="发布新帖子" style="-fx-font-size: 22px; -fx-font-weight: 900; -fx-text-fill: #1e293b;" />
    </HBox>

    <VBox spacing="8">
        <Label text="标题" style="-fx-font-weight: bold; -fx-text-fill: #64748b; -fx-font-size: 13px;" />
        <TextField fx:id="titleField" prefHeight="45" promptText="起一个吸引人的标题吧..."
                   style="-fx-background-color: #f8fafc; -fx-border-color: #e2e8f0; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 0 15; -fx-text-fill: #1e293b;" />
    </VBox>

    <VBox spacing="8">
        <Label text="选择分类" style="-fx-font-weight: bold; -fx-text-fill: #64748b; -fx-font-size: 13px;" />
        <ComboBox fx:id="categoryComboBox" prefHeight="40" prefWidth="200"
                  style="-fx-background-color: #f8fafc; -fx-border-color: #e2e8f0; -fx-border-radius: 10; -fx-background-radius: 10; -fx-cursor: hand;" />
    </VBox>

    <VBox spacing="8" VBox.vgrow="ALWAYS">
        <Label text="正文内容" style="-fx-font-weight: bold; -fx-text-fill: #64748b; -fx-font-size: 13px;" />
        <TextArea fx:id="contentArea" prefHeight="250" wrapText="true" promptText="分享你的故事或观点..."
                  style="-fx-control-inner-background: #f8fafc; -fx-background-color: #f8fafc; -fx-border-color: #e2e8f0; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 10; -fx-text-fill: #334155;"/>
    </VBox>

    <CheckBox fx:id="anonymousCheckBox" text="匿名发布"
              style="-fx-text-fill: #64748b; -fx-font-size: 13px; -fx-cursor: hand;" />

    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button fx:id="cancelButton" text="取消" onAction="#onCancel"
                style="-fx-background-color: transparent; -fx-text-fill: #94a3b8; -fx-font-weight: bold; -fx-padding: 10 25; -fx-cursor: hand;" />

        <Button fx:id="publishButton" text="确认发布" onAction="#onPublish"
                style="-fx-background-color: linear-gradient(to right, #6366f1, #a855f7);
                   -fx-text-fill: white;
                   -fx-font-weight: bold;
                   -fx-background-radius: 12;
                   -fx-padding: 10 35;
                   -fx-font-size: 14px;
                   -fx-cursor: hand;">
            <effect>
                <DropShadow color="#6366f144" radius="15" offsetY="5" />
            </effect>
        </Button>
    </HBox>
</VBox>
