<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.TextFlow?>
<?import javafx.scene.effect.DropShadow?>

<ScrollPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.yunhang.forum.controller.post.PostDetailController"
            fitToWidth="true"
            style="-fx-background-color: #f8fafc; -fx-background-insets: 0;">
    <content>
        <VBox spacing="15" fillWidth="true" style="-fx-background-color: white;">
            <padding>
                <Insets topRightBottomLeft="30" />
            </padding>

            <Label fx:id="titleLabel" wrapText="true"
                   style="-fx-font-size: 24px; -fx-font-weight: 900; -fx-text-fill: #1e293b; -fx-line-spacing: 5;" />

            <HBox spacing="8" alignment="CENTER_LEFT">
                <Label text="作者:" style="-fx-text-fill: #94a3b8; -fx-font-size: 13px;" />
                <Label fx:id="authorLabel" style="-fx-text-fill: #6366f1; -fx-font-weight: bold; -fx-font-size: 13px;" />
                <Label text="发布于" style="-fx-text-fill: #94a3b8; -fx-font-size: 13px;" />
                <Label fx:id="timeLabel" style="-fx-text-fill: #64748b; -fx-font-size: 13px;" />
            </HBox>

            <Label fx:id="contentLabel" wrapText="true"
                   style="-fx-font-size: 15px; -fx-text-fill: #334155; -fx-line-spacing: 6; -fx-padding: 10 0;" />

            <HBox spacing="8" alignment="CENTER_LEFT">
                <Label text="点赞:" style="-fx-text-fill: #94a3b8; -fx-font-size: 13px;" />
                <Label fx:id="likesLabel" text="♥ 0"
                       style="-fx-font-size: 14px; -fx-text-fill: #f43f5e; -fx-font-weight: bold;" />
            </HBox>

            <Separator style="-fx-opacity: 0.4;" />

            <Label text="评论区" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1e293b;" />

            <VBox fx:id="commentsContainer" spacing="12">
            </VBox>

            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10 0;">
                <TextField fx:id="commentInput" promptText="写下你的看法..." HBox.hgrow="ALWAYS"
                           style="-fx-background-color: #f1f5f9; -fx-background-radius: 10; -fx-padding: 10 15; -fx-border-color: transparent;" />
                <Button text="发送" onAction="#onSendComment"
                        style="-fx-background-color: linear-gradient(to right, #6366f1, #a855f7);
                               -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 9 25;
                               -fx-font-weight: bold; -fx-cursor: hand;">
                    <effect>
                        <DropShadow color="#6366f133" radius="10" offsetY="3" />
                    </effect>
                </Button>
            </HBox>
        </VBox>
    </content>
</ScrollPane>
