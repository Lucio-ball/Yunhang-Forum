<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.effect.DropShadow?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.yunhang.forum.controller.auth.RegisterController"
           style="-fx-background-color: #f1f5f9;"> <VBox spacing="15" alignment="CENTER" maxWidth="450"
                                                         style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 35;">

    <effect>
        <DropShadow color="#00000010" radius="30" offsetY="10" />
    </effect>

    <children>
        <Label text="创建新账号"
               style="-fx-font-size: 24px; -fx-font-weight: 900; -fx-text-fill: #1e293b;"
               alignment="CENTER"/>

        <Label fx:id="messageLabel" style="-fx-text-fill: #ef4444; -fx-font-size: 12px;"/>

        <TextField fx:id="studentIdField" promptText="学号 (例如：24373309)" prefHeight="45"
                   style="-fx-background-color: #f8fafc; -fx-border-color: #e2e8f0; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 0 15;"/>

        <TextField fx:id="nicknameField" promptText="昵称" prefHeight="45"
                   style="-fx-background-color: #f8fafc; -fx-border-color: #e2e8f0; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 0 15;"/>

        <HBox spacing="0" alignment="CENTER_LEFT" prefHeight="45"
              style="-fx-border-color: #e2e8f0; -fx-border-width: 1; -fx-border-radius: 10; -fx-background-color: #f8fafc; -fx-background-radius: 10;">
            <TextField fx:id="emailPrefixField" promptText="邮箱前缀"
                       prefHeight="45" HBox.hgrow="ALWAYS"
                       style="-fx-background-color: transparent; -fx-border-width: 0 1 0 0; -fx-border-color: #e2e8f0; -fx-padding: 0 15;"/>
            <Label text="\@buaa.edu.cn" style="-fx-font-size: 13px; -fx-padding: 0 12; -fx-text-fill: #64748b; -fx-font-weight: bold;">
            </Label>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT" prefHeight="45">
            <TextField fx:id="verificationCodeField" promptText="输入验证码" prefHeight="45" HBox.hgrow="ALWAYS"
                       style="-fx-background-color: #f8fafc; -fx-border-color: #e2e8f0; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 0 15;"/>
            <Button fx:id="sendCodeButton" text="发送验证码" onAction="#handleSendCodeAction"
                    prefHeight="45" maxWidth="120"
                    style="-fx-background-color: #ffffff; -fx-border-color: #6366f1; -fx-border-radius: 10; -fx-text-fill: #6366f1; -fx-font-weight: bold; -fx-cursor: hand;"/>
        </HBox>

        <PasswordField fx:id="passwordField" promptText="设置密码" prefHeight="45"
                       style="-fx-background-color: #f8fafc; -fx-border-color: #e2e8f0; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 0 15;"/>

        <PasswordField fx:id="confirmPasswordField" promptText="确认密码" prefHeight="45"
                       style="-fx-background-color: #f8fafc; -fx-border-color: #e2e8f0; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 0 15;"/>

        <Button text="立即注册" onAction="#handleRegisterButtonAction"
                prefWidth="320" prefHeight="45"
                style="-fx-background-color: linear-gradient(to right, #6366f1, #a855f7);
                           -fx-text-fill: white;
                           -fx-background-radius: 10;
                           -fx-font-weight: bold;
                           -fx-font-size: 14px;
                           -fx-cursor: hand;">
            <effect>
                <DropShadow color="#6366f144" radius="12" offsetY="4" />
            </effect>
        </Button>

        <HBox alignment="CENTER" spacing="10">
            <Label text="已有账号?" style="-fx-font-size: 13px; -fx-text-fill: #64748b;"/>
            <Button text="返回登录" onAction="#handleBackToLoginAction"
                    style="-fx-background-color: transparent; -fx-text-fill: #6366f1; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 0;"/>
        </HBox>
    </children>

    <padding>
        <Insets top="35" right="40" bottom="35" left="40"/>
    </padding>

</VBox>

</StackPane>
